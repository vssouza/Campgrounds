<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New CampGround</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;" id="campgrounds-grid">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail index-box">
                    <!--div class="campground-remove-icon" id="trashcan">
                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                    </div-->
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <a href="/campgrounds/<%= campground._id %>" name="campground-id" value="<%= campground._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>