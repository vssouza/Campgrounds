<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create new Campground:</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" placeholder="Name" type="text" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Price" type="number" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Image" type="text" name="campground[image]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" rows="6" placeholder="Insert a description here"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Campground</button>
                </div>
            </form>
            <a href="/"><< Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>